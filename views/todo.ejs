<!DOCTYPE html>

<html>
	<head>
		<title> My todo list </title>

	</head>

	<body>
		<h1> matodolist </h1>

		<ul>
			<% if (todolist !== undefined) todolist.forEach(function(todo, undex){ %>
				<li><%- link_to(todo, 'todo/supprimer'+undex) %></li>
		 	<%}); %>
		</ul>
		<form action = "todo/ajouter" method= "post">
			<p>
			<label for="newtodo"> Que dois je faire ? </label>
			<input type="text" name="newtodo" id="newtodo" autofocus/>
			<input type="submit" />
			</p>
		</form>
	</body>
</html>